<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
        android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:onClick="cst"
        android:text="Computer Science and Technology"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="ct"
        android:text="Chemical Technology"

         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="me"
        android:text="Mechanical Engineering"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
        android:onClick="ect"
        android:text="Electronics and Telecommunication Technology"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="food"
        android:text="Food Technology"
         />
</androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>